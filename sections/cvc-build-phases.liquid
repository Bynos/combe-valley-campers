{{ 'section-cvc-build-phases.css' | asset_url | stylesheet_tag }}

<div class="cvc-build-phases section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.heading != blank or section.settings.description != blank -%}
      <div class="cvc-build-phases__header">
        {%- if section.settings.heading != blank -%}
          <h3 class="cvc-build-phases__heading">{{ section.settings.heading }}</h3>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p class="cvc-build-phases__description">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="cvc-build-phases__panels">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'cvc-build-phases-panel' -%}
              {% render 'cvc-build-phases-panel', block: block %}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "CVC Build Phases",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "BUILD PHASE"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Purchase our products based on which phase of your build you are on."
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "cvc-build-phases-panel",
      "name": "Build Phase Panel",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Phase Title",
          "default": "PHASE 01"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Phase Image"
        },
        {
          "type": "select",
          "id": "image_position",
          "label": "Image Position",
          "options": [
            {
              "value": "top left",
              "label": "Top Left"
            },
            {
              "value": "top center",
              "label": "Top Center"
            },
            {
              "value": "top right",
              "label": "Top Right"
            },
            {
              "value": "center left",
              "label": "Center Left"
            },
            {
              "value": "center center",
              "label": "Center Center"
            },
            {
              "value": "center right",
              "label": "Center Right"
            },
            {
              "value": "bottom left",
              "label": "Bottom Left"
            },
            {
              "value": "bottom center",
              "label": "Bottom Center"
            },
            {
              "value": "bottom right",
              "label": "Bottom Right"
            }
          ],
          "default": "center center"
        },
        {
          "type": "header",
          "content": "Links"
        },
        {
          "type": "text",
          "id": "link_1_text",
          "label": "Link 1 Text"
        },
        {
          "type": "url",
          "id": "link_1_url",
          "label": "Link 1 URL"
        },
        {
          "type": "text",
          "id": "link_2_text",
          "label": "Link 2 Text"
        },
        {
          "type": "url",
          "id": "link_2_url",
          "label": "Link 2 URL"
        },
        {
          "type": "text",
          "id": "link_3_text",
          "label": "Link 3 Text"
        },
        {
          "type": "url",
          "id": "link_3_url",
          "label": "Link 3 URL"
        },
        {
          "type": "text",
          "id": "link_4_text",
          "label": "Link 4 Text"
        },
        {
          "type": "url",
          "id": "link_4_url",
          "label": "Link 4 URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "CVC Build Phases",
      "blocks": [
        {
          "type": "cvc-build-phases-panel",
          "settings": {
            "title": "PHASE 01"
          }
        },
        {
          "type": "cvc-build-phases-panel",
          "settings": {
            "title": "PHASE 02"
          }
        },
        {
          "type": "cvc-build-phases-panel",
          "settings": {
            "title": "PHASE 03"
          }
        }
      ]
    }
  ]
}
{% endschema %}
