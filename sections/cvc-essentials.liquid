{{ 'section-cvc-essentials.css' | asset_url | stylesheet_tag }}

<div class="cvc-essentials section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.heading != blank or section.settings.description != blank -%}
      <div class="cvc-essentials__header">
        {%- if section.settings.heading != blank -%}
          <h2 class="cvc-essentials__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p class="cvc-essentials__description">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      {%- liquid
        assign total_blocks = section.blocks.size
        assign columns = section.settings.columns
        
        # Calculate balanced rows
        # We want row 1 to have at most 1 more item than row 2
        if total_blocks <= columns
          assign row1_count = total_blocks
          assign row2_count = 0
        else
          assign items_per_row = total_blocks | divided_by: 2.0 | ceil
          if items_per_row > columns
            assign items_per_row = columns
          endif
          assign row1_count = items_per_row
          assign row2_count = total_blocks | minus: items_per_row
        endif
      -%}

      <div 
        class="cvc-essentials__grid" 
        style="--columns-desktop: {{ columns }}; --row1-count: {{ row1_count }}; --row2-count: {{ row2_count }};"
      >
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'essential_panel' -%}
              {% render 'cvc-essentials-panel', 
                block: block
              %}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "t:names.cvc_essentials",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:settings.heading",
      "default": "Van Essentials"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "t:names.description",
      "default": "Everything you need for your camper van conversion"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "t:settings.columns",
      "default": 3,
      "info": "Number of columns in the grid on desktop"
    },
    {
      "type": "header",
      "content": "t:content.colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:settings.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:settings.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "essential_panel",
      "name": "t:names.cvc_essentials_panel",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:settings.image"
        },
        {
          "type": "text",
          "id": "label",
          "label": "t:settings.label",
          "default": "Essential Item"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:settings.link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:names.cvc_essentials",
      "blocks": [
        {
          "type": "essential_panel",
          "settings": {
            "label": "Electrical"
          }
        },
        {
          "type": "essential_panel",
          "settings": {
            "label": "Plumbing"
          }
        },
        {
          "type": "essential_panel",
          "settings": {
            "label": "Insulation"
          }
        }
      ]
    }
  ]
}
{% endschema %}
